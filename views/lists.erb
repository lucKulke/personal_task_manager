
<ul id="lists">
  <% sorted_lists(@lists) do |list| %>
    <li class="<%= list_class(list) %>"> 
      <a href="/lists/<%=list[:id]%>">
        <h2><%= list[:name] %></h2> 
        <p><%= "#{count_completed_todos(list)}/#{list[:todos].size}" %></p>
      </a>
    </li>
  <% end %>
</ul>
<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
